<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.homepage.phonesubwayticket.PhoneActivity">
    <include
        android:id="@+id/title_layout"
        layout="@layout/layout_title"
        android:fitsSystemWindows="true" />
    <ImageView
        android:id="@+id/iv_ticket_line"
        android:layout_width="340dp"
        android:layout_margin="10dp"
        android:layout_height="200dp"
        android:src="@mipmap/lineway"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title_layout"/>
    <Button
        android:id="@+id/btn_go_buy"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_ticket_line"
        android:layout_margin="50dp"
        android:textSize="18sp"
        android:background="@mipmap/btn_buy"
        android:textColor="@color/text_gray1"
        android:text="@string/buy_instant" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@mipmap/usingway"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
